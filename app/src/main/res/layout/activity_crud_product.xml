<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CRUD_Product"
    android:orientation="vertical">
    <include
        android:id="@+id/CRUD_toolbar"
        layout="@layout/toolbar"
    />
    <LinearLayout
        android:id="@+id/crud_content"
        android:layout_below="@+id/CRUD_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerProduk"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <Button
        android:id="@+id/crud_btnTambah"
        android:layout_width="match_parent"
        android:paddingVertical="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/crud_text_price_color"
        android:background="@drawable/custom_button"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Tambah Produk"/>



</RelativeLayout>