<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailProduk"
    android:paddingHorizontal="10dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/btn_link_produk">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/thumbnail_produk"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ikan_besar"/>
            <LinearLayout
                android:layout_marginVertical="10dp"
                android:id="@+id/list_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/thumbnail_produk">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_list_thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
            </LinearLayout>
            <TextView
                android:id="@+id/nama_mitra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bandeng Pak Syafiq"
                android:layout_below="@id/list_thumbnail"
                android:textSize="16dp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/crud_text_main_color"/>
            <TextView
                android:id="@+id/nama_produk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bandeng Otak-Otak"
                android:layout_below="@id/nama_mitra"
                android:textSize="22dp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/crud_text_main_color"/>
            <TextView
                android:id="@+id/harga_produk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 13.000"
                android:layout_below="@id/nama_produk"
                android:textSize="20dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/crud_text_main_color"/>
            <ImageView
                android:id="@+id/crud_star"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_star"
                android:textSize="16dp"
                android:layout_toLeftOf="@+id/rate_produk"
                android:layout_below="@+id/list_thumbnail"/>
            <TextView
                android:id="@+id/rate_produk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.6"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/list_thumbnail"
                android:textSize="16dp"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginLeft="7dp"
                android:textColor="@color/crud_text_second_color"/>
            <View
                android:id="@+id/line_separator"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/crud_text_second_color"
                android:layout_below="@id/harga_produk"
                android:layout_marginVertical="10dp"/>
            <TextView
                android:id="@+id/static_deskripsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deskripsi"
                android:layout_below="@id/line_separator"
                android:textSize="18dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/crud_text_main_color"/>

            <TextView
                android:layout_marginVertical="5dp"
                android:id="@+id/deskripsi_produk"
                android:layout_below="@id/static_deskripsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/crud_text_main_color"
                android:text="Bandeng otak-otak merupakan olahan ikan bandeng yang memiliki cita rasa unik dan beragam, memadukan rasa gurih ikan bandeng dengan bumbu-bumbu rempah yang khas."/>
        </RelativeLayout>
    </ScrollView>
    <Button
        android:id="@+id/btn_link_produk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Link Produk"
        android:textSize="18dp"
        android:fontFamily="@font/poppins_bold"
        android:background="@drawable/custom_button"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"/>
</RelativeLayout>