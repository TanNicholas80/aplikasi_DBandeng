<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".landing_page_profile">
    <include
        android:id="@+id/profile_toolbar"
        layout="@layout/toolbar"
    />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_user"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/profile_users" />
        <TextView
            android:id="@+id/namalengkap_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Bang Chad"
            android:fontFamily="@font/poppins_bold"
            android:textSize="28dp"
        />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="40dp"
                android:orientation="vertical"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alamat :"
                    android:textSize="16dp"
                    android:fontFamily="@font/poppins_semibold"
                />
                <TextView
                    android:id="@+id/alamat_User"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/highlited_profile"
                    android:paddingLeft="15dp"
                    android:paddingVertical="8dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text=""
                />
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nomor HP :"
                    android:textSize="16dp"
                    android:fontFamily="@font/poppins_semibold"
                />
                <TextView
                    android:id="@+id/hp_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/highlited_profile"
                    android:paddingLeft="15dp"
                    android:paddingVertical="8dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text=""
                />
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email :"
                    android:textSize="16dp"
                    android:fontFamily="@font/poppins_semibold"
                />
                <TextView
                    android:id="@+id/email_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/highlited_profile"
                    android:paddingLeft="15dp"
                    android:paddingVertical="8dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text=""
                />
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                >
                    <Button
                        android:id="@+id/Logout_User"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:text="Log Out"
                        android:drawableLeft="@drawable/log_out"
                        android:backgroundTint="#E71A1A"
                    />
                    <Space
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                    />
                    <Button
                        android:id="@+id/Edit_User"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/edit_user"
                        android:text="Edit"
                        android:backgroundTint="#1291EB"
                    />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>